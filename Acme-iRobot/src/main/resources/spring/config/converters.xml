<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd		
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-4.0.xsd		
	">

	<util:list id="converters">
		<!-- Add your own converters using entries of the following form: <bean 
			class="converters.Class1ToClass2" /> -->

		<bean class="converters.AdministratorToStringConverter" />
		<bean class="converters.StringToAdministratorConverter" />

		<bean class="converters.ScientistToStringConverter" />
		<bean class="converters.StringToScientistConverter" />

		<bean class="converters.PurchaseToStringConverter" />
		<bean class="converters.StringToPurchaseConverter" />

		<bean class="converters.IRobotToStringConverter" />
		<bean class="converters.StringToIRobotConverter" />

		<bean class="converters.FinderToStringConverter" />
		<bean class="converters.StringToFinderConverter" />

		<bean class="converters.CustomerToStringConverter" />
		<bean class="converters.StringToCustomerConverter" />

		<bean class="converters.SystemConfigurationToStringConverter" />
		<bean class="converters.StringToSystemConfigurationConverter" />

		<bean class="converters.ActorToStringConverter" />
		<bean class="converters.StringToActorConverter" />
		
		<bean class="converters.UserToStringConverter" />
		<bean class="converters.StringToUserConverter" />
		
		<bean class="converters.CommentToStringConverter" />
		<bean class="converters.StringToCommentConverter" />
		
	</util:list>

</beans>